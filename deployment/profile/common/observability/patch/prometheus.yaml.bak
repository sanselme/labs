---
apiVersion: helm.toolkit.fluxcd.io/v2beta1
kind: HelmRelease
metadata:
  name: kube-prom-stack
spec:
  values:
    grafana:
      enabled: true
      additionalDataSources:
        - name: Loki
          type: loki
          orgId: 1
          access: proxy
          url: http://loki:3100/
          jsonData:
            httpHeaderName1: X-Scope-OrgID
            derivedFields:
              - name: TraceID
                dataSourceUid: Tempo
                matcherRegex: traceID=(\w+)
                url: $${__value.raw}
              - name: TraceID
                matcherRegex: traceID=(\w+)
                url: http://localhost:16686/trace/$${__value.raw}
          secureJsonData:
            httpHeaderValue1: "1"
        - name: Tempo
          type: tempo
          orgId: 1
          access: proxy
          url: http://tempo:3100/
          jsonData:
            httpHeaderName1: X-Scope-OrgID
            lokiSearch:
              dataSourceUid: Loki
            nodeGraph:
              enabled: true
            serviceGraph:
              dataSourceUid: Prometheus
            tracesToMetrics:
              dataSourceUid: Prometheus
            tracesToLogsV2:
              dataSourceUid: Loki
              filterByTraceID: true
              filterBySpanID: true
              customQuery: true
              query: method="${__span.tags.method}"
          secureJsonData:
            httpHeaderValue1: "1"
